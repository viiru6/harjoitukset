        <TextBox x:Name="SukunimiText" HorizontalAlignment="Left" Height="34" Margin="48,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315"/>
        <TextBox x:Name="OpiskelijaIDText" HorizontalAlignment="Left" Height="34" Margin="48,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315"/>
        <TextBox x:Name="SähköpostiText" HorizontalAlignment="Left" Height="33" Margin="48,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315"/>
        <TextBox x:Name="PuhelinnumeroText" HorizontalAlignment="Left" Height="34" Margin="48,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315"/>
        <TextBlock x:Name="virheText" HorizontalAlignment="Left" Margin="122,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="175"/>
        <StackPanel x:Name="taulu" HorizontalAlignment="Left" Height="371" Margin="378,25,0,0" VerticalAlignment="Top" Width="391" Background="#FFECE1E1"/>

