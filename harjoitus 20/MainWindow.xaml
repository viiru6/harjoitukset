        <Button x:Name="btnSaveToFileButton_Copy" Content="btnSaveToFile" HorizontalAlignment="Left" Margin="158,30,0,0" VerticalAlignment="Top" Width="100" Click="btnSaveToFileButton_Click"/>
        <Button x:Name="btnLoadFromFileButton_Copy" Content="btnLoadFromFile" HorizontalAlignment="Left" Margin="263,30,0,0" VerticalAlignment="Top" Width="100" Click="btnLoadFromFileButton_Copy_Click"/>
        <Button x:Name="LisääOpiskelijaNappi" Content="lisää opiskelija" HorizontalAlignment="Left" Margin="53,30,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,66,0,0" TextWrapping="Wrap" Text="Etunimi:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,105,0,0" TextWrapping="Wrap" Text="sukunimi:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,147,0,0" TextWrapping="Wrap" Text="opiskelijaID:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,186,0,0" TextWrapping="Wrap" Text="sähköposti:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,224,0,0" TextWrapping="Wrap" Text="puhelinnumero:" VerticalAlignment="Top"/>
        <TextBox x:Name="EtunimiText" HorizontalAlignment="Left" Height="23" Margin="48,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SukunimiText" HorizontalAlignment="Left" Height="23" Margin="48,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OpiskelijaIDText" HorizontalAlignment="Left" Height="23" Margin="48,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SähköpostiText" HorizontalAlignment="Left" Height="23" Margin="48,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PuhelinnumeroText" HorizontalAlignment="Left" Height="23" Margin="48,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
